---
import MeshPattern from "@/partials/home/mesh-pattern/index.astro";
import OptimizedCard from "@/partials/templates/optimized-card/index.astro";

import "./styles.css";

const optimized = [];
---

<section class="optimized">
	<!--  Optimized Pattern -->

	<div class="optimized__container">
		<h2
			class="text__heading--h5 text__heading--h4-md text__heading--h2-lg optimized__title"
		>
			<!--  Optimized Title -->
		</h2>

		<div class="optimized__grid">
			<div class="u-grid-bg u-grid-bg--top u-grid-bg--blue-primary"></div>
			<div class="u-grid-bg u-grid-bg--top-thin u-grid-bg--blue-secondary">
			</div>
			<div class="u-grid-bg u-grid-bg--bottom u-grid-bg--blue-secondary"></div>
			<div class="u-grid-bg u-grid-bg--bottom-thin u-grid-bg--navy-secondary">
			</div>

			<div class="optimized__grid__card">
				<div class="u-grid-bg u-grid-bg--left u-grid-bg--gradient"></div>
				<div class="u-grid-bg u-grid-bg--left-thin u-grid-bg--gradient-border">
				</div>

				<div class="u-grid-bg u-grid-bg--right u-grid-bg--gradient"></div>
				<div class="u-grid-bg u-grid-bg--right-thin u-grid-bg--gradient-border">
				</div>

				<div
					class="u-grid-bg-dot u-grid-bg-dot--large u-grid-bg-dot--top-left u-grid-bg--blue-primary"
				>
				</div>
				<div
					class="u-grid-bg-dot u-grid-bg-dot--small u-grid-bg-dot--top-left u-grid-bg--blue-secondary"
				>
				</div>

				<div
					class="u-grid-bg-dot u-grid-bg-dot--large u-grid-bg-dot--top-right u-grid-bg--blue-primary"
				>
				</div>
				<div
					class="u-grid-bg-dot u-grid-bg-dot--small u-grid-bg-dot--top-right u-grid-bg--blue-secondary"
				>
				</div>

				<div
					class="u-grid-bg-dot u-grid-bg-dot--large u-grid-bg-dot--bottom-left u-grid-bg--blue-secondary"
				>
				</div>
				<div
					class="u-grid-bg-dot u-grid-bg-dot--small u-grid-bg-dot--bottom-left u-grid-bg--navy-primary"
				>
				</div>

				<div
					class="u-grid-bg-dot u-grid-bg-dot--large u-grid-bg-dot--bottom-right u-grid-bg--blue-secondary"
				>
				</div>
				<div
					class="u-grid-bg-dot u-grid-bg-dot--small u-grid-bg-dot--bottom-right u-grid-bg--navy-primary"
				>
				</div>

				<div class="optimized__card__container">
					{optimized.map((item) => <OptimizedCard data={item} />)}
				</div>
			</div>
		</div>
	</div>
	<MeshPattern isBlue={true} />
</section>
